      "expected_skill": "chart-generator",
      "should_match": true,
      "notes": "Should discover chart-generator in top-3 results"
    },
    {
      "type": "functional",
      "tool": "bar_chart_tool",
      "input": {
        "data": {
          "Python": 35,
          "JavaScript": 28,
          "Go": 15,
          "Rust": 12
        }
      },
      "expected_output_keys": [
        "success"
      ],
      "notes": "Basic invocation of bar_chart_tool"
    },
    {
      "type": "edge_case",
