{
  "skill": "port-scanner",
  "version": "1.0",
  "scenarios": [
    {
      "type": "triggering",
      "prompt": "I need to port scanner",
      "expected_skill": "port-scanner",
      "should_match": true,
      "notes": "Should discover port-scanner in top-3 results"
    },
    {
      "type": "functional",
      "tool": "scan_ports",
      "input": {
        "host": "localhost",
        "ports": [
          80,
          443
        ]
      },
      "expected_output_keys": [
        "success"
      ],
      "notes": "Basic invocation of scan_ports"
    },
    {
      "type": "edge_case",
      "prompt": "Use port-scanner with missing required parameters",
      "expected_behavior": "graceful_error",
      "notes": "Should handle invalid input gracefully"
    }
  ]
}
