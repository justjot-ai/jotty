{
  "skill": "epub-builder",
  "version": "1.0",
  "scenarios": [
    {
      "type": "triggering",
      "prompt": "I need to building epub books",
      "expected_skill": "epub-builder",
      "should_match": true,
      "notes": "Should discover epub-builder in top-3 results"
    },
    {
      "type": "functional",
      "tool": "build_epub_tool",
      "input": {
        "title": "My Book",
        "author": "Author Name",
        "chapters": [
          {
            "title": "Chapter 1",
            "content": "This is the first chapter."
          }
        ]
      },
      "expected_output_keys": [
        "success"
      ],
      "notes": "Basic invocation of build_epub_tool"
    },
    {
      "type": "edge_case",
      "prompt": "Use epub-builder with missing required parameters",
      "expected_behavior": "graceful_error",
      "notes": "Should handle invalid input gracefully"
    }
  ]
}
