{
  "kanban-board": {
    "type": "kanban-board",
    "description": "Visual task tracking with drag-and-drop columns",
    "contentType": "json",
    "schema": {
      "type": "object",
      "required": ["columns"],
      "properties": {
        "columns": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["id", "title"],
            "properties": {
              "id": {"type": "string"},
              "title": {"type": "string"},
              "items": {
                "type": "array",
                "items": {
                  "type": "object",
                  "required": ["id", "title"],
                  "properties": {
                    "id": {"type": "string"},
                    "title": {"type": "string"},
                    "description": {"type": "string", "optional": true},
                    "priority": {
                      "type": "enum",
                      "values": ["low", "medium", "high", "urgent"],
                      "optional": true
                    },
                    "assignee": {
                      "type": "object",
                      "optional": true,
                      "properties": {
                        "name": {"type": "string"},
                        "avatar": {"type": "string", "optional": true},
                        "email": {"type": "string", "optional": true}
                      }
                    },
                    "labels": {
                      "type": "array",
                      "items": {"type": "string"},
                      "optional": true
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "transforms": {
      "columns.*.items.*.priority": {
        "from": "number",
        "to": "enum",
        "mapping": {"1": "low", "2": "medium", "3": "high", "4": "urgent"}
      },
      "columns.*.items.*.assignee": {
        "from": "string",
        "to": "object",
        "fields": {"name": "$value"}
      }
    },
    "llmHint": "return_kanban(columns=[{id, title, items=[{id, title, priority, assignee}]}], title)"
  },
  "chart": {
    "type": "chart",
    "description": "Data visualizations (bar, line, pie, etc)",
    "contentType": "json",
    "schema": {
      "type": "object",
      "required": ["type", "data"],
      "properties": {
        "type": {
          "enum": ["bar", "column", "line", "area", "pie", "doughnut", "radar", "scatter"]
        },
        "data": {"type": "object"}
      }
    },
    "llmHint": "return_chart(type='bar|line|pie', data={labels, datasets}, title)"
  },
  "mermaid": {
    "type": "mermaid",
    "description": "Flowcharts, sequence diagrams, etc",
    "contentType": "text",
    "schema": {
      "type": "string",
      "format": "mermaid-syntax"
    },
    "llmHint": "return_mermaid(diagram='graph TD\\n  A-->B', title)"
  },
  "data-table": {
    "type": "data-table",
    "description": "Structured data tables",
    "contentType": "text",
    "schema": {
      "type": "string",
      "format": "csv"
    },
    "llmHint": "return_data_table(csv_data='Name,Age\\nAlice,30', title)"
  },
  "file-download": {
    "type": "file-download",
    "description": "Downloadable file with preview. Use for PDFs, Word docs, presentations, and other documents.",
    "contentType": "json",
    "schema": {
      "type": "object",
      "required": ["url", "filename", "format"],
      "properties": {
        "url": {
          "type": "string",
          "description": "URL or path to download the file"
        },
        "filename": {
          "type": "string",
          "description": "Display name for the file"
        },
        "format": {
          "type": "enum",
          "values": ["pdf", "docx", "pptx", "xlsx", "csv", "txt", "md", "html", "zip"],
          "description": "File format for icon and preview handling"
        },
        "size": {
          "type": "string",
          "optional": true,
          "description": "Human-readable file size (e.g., '2.5 MB')"
        },
        "preview": {
          "type": "boolean",
          "optional": true,
          "description": "Whether to show inline preview (default: true)"
        },
        "previewUrl": {
          "type": "string",
          "optional": true,
          "description": "URL for iframe preview (Google Docs Viewer for docx/pptx/xlsx, direct URL for pdf)"
        },
        "description": {
          "type": "string",
          "optional": true,
          "description": "Brief description of the file contents"
        }
      }
    },
    "llmHint": "return_file_download(url='/path/to/file.pdf', filename='Report.pdf', format='pdf', title)"
  },
  "image": {
    "type": "image",
    "description": "Display an image inline with optional caption",
    "contentType": "json",
    "schema": {
      "type": "object",
      "required": ["url"],
      "properties": {
        "url": {
          "type": "string",
          "description": "URL or path to the image"
        },
        "alt": {
          "type": "string",
          "optional": true,
          "description": "Alt text for accessibility"
        },
        "caption": {
          "type": "string",
          "optional": true,
          "description": "Caption displayed below the image"
        },
        "width": {
          "type": "string",
          "optional": true,
          "description": "CSS width (e.g., '100%', '500px')"
        }
      }
    },
    "llmHint": "return_image(url='/path/to/image.png', caption='Description', title)"
  }
}
