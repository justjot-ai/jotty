# =============================================================================
# STOCK MARKET SCREENER CONFIGURATION
# =============================================================================
# Environment configuration for Stock Market Screener with CRUD operations
# and backtesting capabilities for entry/exit conditions
#
# IMPORTANT: Change default values before deploying to production!
# =============================================================================

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Primary database for storing stock data, screener criteria, and backtest results
DATABASE_URL=sqlite:///data/stock_market.db
DB_ECHO=false

# Database connection pool settings for performance optimization
SQLALCHEMY_POOL_SIZE=20
SQLALCHEMY_MAX_OVERFLOW=30
SQLALCHEMY_POOL_TIMEOUT=30
SQLALCHEMY_POOL_RECYCLE=3600

# =============================================================================
# CACHE & MESSAGE BROKER CONFIGURATION
# =============================================================================
# Redis for caching market data and task queuing
REDIS_URL=redis://localhost:6379/0

# Celery for background tasks (data fetching, backtesting, alerts)
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
CELERY_ACCEPT_CONTENT=json
CELERY_TIMEZONE=UTC

# =============================================================================
# API SERVER CONFIGURATION
# =============================================================================
# REST API settings for CRUD operations
API_ENV=development
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# Cross-Origin Resource Sharing for frontend integration
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# JWT and authentication settings
# WARNING: Change SECRET_KEY in production!
SECRET_KEY=your-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# API rate limiting to prevent abuse
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# =============================================================================
# MARKET DATA PROVIDERS
# =============================================================================
# External API keys for market data (Optional - yfinance is free)
# Register at respective providers and replace with actual keys
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key_here
POLYGON_API_KEY=your_polygon_key_here
IEX_API_KEY=your_iex_key_here

# =============================================================================
# BACKGROUND PROCESSING
# =============================================================================
# Task execution and retry configuration for data updates and backtesting
MAX_RETRIES=3
RETRY_DELAY=60
TASK_TIME_LIMIT=300

# =============================================================================
# FRONTEND APPLICATION
# =============================================================================
# React application configuration for screener UI
REACT_APP_API_BASE_URL=http://localhost:8000
REACT_APP_WS_URL=ws://localhost:8000/ws
REACT_APP_ENV=development

# =============================================================================
# LOGGING & MONITORING
# =============================================================================
# Application logging configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# =============================================================================
# JOTTY AI ASSISTANT CONFIGURATION
# =============================================================================
# Multi-channel AI assistant with voice, messaging, and local-first support

# -----------------------------------------------------------------------------
# LLM PROVIDERS
# -----------------------------------------------------------------------------
# Anthropic Claude (primary)
ANTHROPIC_API_KEY=sk-ant-your-key-here

# OpenAI (for Whisper STT, GPT fallback)
OPENAI_API_KEY=sk-your-openai-key-here

# Google Gemini (alternative)
GOOGLE_API_KEY=your-google-api-key
GEMINI_API_KEY=your-gemini-api-key

# -----------------------------------------------------------------------------
# VOICE PROVIDERS (OpenClaw-inspired)
# -----------------------------------------------------------------------------
# ElevenLabs TTS (cloud)
ELEVENLABS_API_KEY=your-elevenlabs-key

# Local Voice (privacy-first, no API calls)
# Whisper.cpp for STT
WHISPER_CPP_PATH=/path/to/whisper.cpp/main
WHISPER_MODEL_PATH=/path/to/models/ggml-base.en.bin

# Piper TTS for local speech synthesis
PIPER_PATH=/path/to/piper
PIPER_VOICE_PATH=/path/to/voices/en_US-lessac-medium.onnx

# -----------------------------------------------------------------------------
# TELEGRAM BOT
# -----------------------------------------------------------------------------
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_ALLOWED_USERS=123456789,987654321

# -----------------------------------------------------------------------------
# SLACK INTEGRATION
# -----------------------------------------------------------------------------
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_SIGNING_SECRET=your-signing-secret
SLACK_APP_TOKEN=xapp-your-app-token

# -----------------------------------------------------------------------------
# DISCORD BOT
# -----------------------------------------------------------------------------
DISCORD_BOT_TOKEN=your-discord-bot-token
DISCORD_PUBLIC_KEY=your-discord-public-key
DISCORD_APPLICATION_ID=your-application-id

# -----------------------------------------------------------------------------
# WHATSAPP (Dual Provider - OpenClaw-inspired)
# -----------------------------------------------------------------------------
# Option 1: Baileys (free, open-source) - PREFERRED
BAILEYS_HOST=localhost
BAILEYS_PORT=3000
BAILEYS_SESSION_PATH=/path/to/baileys/session

# Option 2: WhatsApp Business API (official Meta)
WHATSAPP_PHONE_ID=your-phone-number-id
WHATSAPP_TOKEN=your-permanent-access-token
WHATSAPP_VERIFY_TOKEN=jotty

# -----------------------------------------------------------------------------
# JOTTY GATEWAY
# -----------------------------------------------------------------------------
JOTTY_GATEWAY_HOST=0.0.0.0
JOTTY_GATEWAY_PORT=8766

# Trust settings (pairing codes for DM security)
JOTTY_TRUST_ENABLED=true
JOTTY_TRUST_CONFIG_PATH=~/.jotty/allowed_users.json

# -----------------------------------------------------------------------------
# LOCAL-FIRST MODE (Privacy)
# -----------------------------------------------------------------------------
# Set to true for fully local inference (no external API calls)
JOTTY_LOCAL_MODE=false
JOTTY_LOCAL_MODEL=ollama/llama3
JOTTY_LOCAL_VOICE=true

# Ollama settings (for local LLM)
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama3